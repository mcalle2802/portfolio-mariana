<style>
.contact-header {
  text-align: center;
  margin-top: 4rem;
}

.contact-form {
  max-width: 600px;
  margin: 3rem auto;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 12px;
  padding: 2rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
}

form {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

input,
textarea {
  padding: 0.8rem;
  border: 2px solid var(--color-accent);
  border-radius: 6px;
  font-family: var(--font-body);
}

button {
  background-color: var(--color-accent);
  color: var(--color-bg);
  border: none;
  padding: 0.8rem 1rem;
  border-radius: 6px;
  font-weight: bold;
  cursor: pointer;
  transition: background-color 0.3s;
}

button:hover {
  background-color: var(--color-deep);
}

.social-links {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin-top: 2rem;
}

.social-links a {
  color: var(--color-accent);
  font-weight: 600;
  transition: color 0.3s;
}
.social-links a:hover {
  color: var(--color-deep);
}
</style>
